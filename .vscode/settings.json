{
  "files.associations": {
    "*.py": "python",
    "mqtt_control.h": "c",
    "mqtt_util.h": "c",
    "mqtt_com.h": "c",
    "cdefs.h": "c",
    "socket.h": "c",
    "mqtt_parser.h": "c",
    "__bit_reference": "c",
    "__split_buffer": "c",
    "vector": "c",
    "cstdint": "c",
    "mqtt_protocol.h": "c"
  },

  "makefile.configureOnOpen": false,
  "editor.formatOnType": false,

  "files.exclude": {
    "**/build": true,
    "**/out": true,
    "**/dist": true,
    "**/.git": true
  },

  "editor.tokenColorCustomizations": {
    "keywords": "#f7db07",
    "strings": "#aba500",
    "comments": "#b556c0",
    "variables": "#ffffff",
    "types": "#ffffff",
    "functions": "#9934fe",

    "textMateRules": [
    {
      "scope": "storage.type.c",
      "settings": {
        "foreground": "#ff79c6", // your desired color for struct, typedef, etc.
        "fontStyle": "bold"
      }
    },

    {
      "scope": "variable.other.local.c",
      "settings": {
        "foreground": "#ffffff"  // your desired color
      }
    },

    {
      "scope": "entity.name.type.c",
      "settings": {
        "foreground": "#f7b707", // user-defined type names
        "fontStyle": "italic"
      }
    }

  ]
  },
  "C_Cpp.default.compilerPath": "/opt/homebrew/bin/gcc-14",
}
